@model NewsManagementMVC.Models.ViewModels.Account.AccountViewModel

@{
    ViewData["Title"] = "Your Profile";
}

<h2 class="text-center mt-4 mb-4">Your Profile</h2>

<div class="d-flex justify-content-center">
    <div class="w-50">

        @* Hiển thị thông báo thành công hoặc lỗi *@
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
        }
        @if (TempData["InfoMessage"] != null)
        {
            <div class="alert alert-info">@TempData["InfoMessage"]</div>
        }

        <form asp-action="UpdateProfile" method="post">
            <input type="hidden" asp-for="AccountId" />

            <div class="form-group mb-3">
                <label for="AccountName" class="form-label">Account Name</label>
                <input asp-for="AccountName" class="form-control" />
                <span asp-validation-for="AccountName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label for="AccountEmail" class="form-label">Account Email</label>
                <input asp-for="AccountEmail" class="form-control" />
                <span asp-validation-for="AccountEmail" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label class="form-label">Role</label>
                @{
                    string roleDisplay = Model.AccountRole switch
                    {
                        0 => "Admin",
                        1 => "Staff",
                        2 => "Lecturer",
                        _ => "Unknown"
                    };
                }
                <input class="form-control" value="@roleDisplay" disabled />
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-success me-3">Save Changes</button>
                <button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#changePasswordModal">
                    Change Password
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Modal: Change Password -->
<div class="modal fade" id="changePasswordModal" tabindex="-1" aria-labelledby="changePasswordModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="ChangePassword" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="changePasswordModalLabel">Change Password</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    @if (TempData["PasswordError"] != null)
                    {
                        <div class="alert alert-danger">@TempData["PasswordError"]</div>
                    }
                    @if (TempData["PasswordSuccess"] != null)
                    {
                        <div class="alert alert-success">@TempData["PasswordSuccess"]</div>
                    }

                    <div class="mb-3">
                        <label class="form-label">Current Password</label>
                        <input type="password" name="CurrentPassword" class="form-control" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">New Password</label>
                        <input type="password" name="NewPassword" class="form-control" required minlength="6" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Confirm New Password</label>
                        <input type="password" name="ConfirmPassword" class="form-control" required minlength="6" />
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Change Password</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(document).ready(function () {
            var hasPasswordError = '@TempData["PasswordError"]' !== '';
            var hasPasswordSuccess = '@TempData["PasswordSuccess"]' !== '';

            if (hasPasswordError || hasPasswordSuccess) {
                var modal = new bootstrap.Modal(document.getElementById('changePasswordModal'));
                modal.show();
            }
        });
    </script>
}
