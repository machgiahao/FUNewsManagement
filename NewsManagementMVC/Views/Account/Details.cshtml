@model AccountViewModel

@{
    ViewData["Title"] = "Account Details";
}

<style>
    .details-card {
        background: #fff;
        border-radius: 24px;
        box-shadow: 0 8px 32px 0 rgba(60,60,60,0.10), 0 1.5px 6px 0 rgba(60,60,60,0.08);
        max-width: 600px;
        margin: 48px auto 32px auto;
        padding: 40px 36px 32px 36px;
    }

    .details-title {
        color: #ff9800;
        font-size: 1.5rem;
        font-weight: 700;
        text-align: center;
        margin-bottom: 32px;
    }

    .details-dl {
        display: grid;
        grid-template-columns: 150px 1fr;
        row-gap: 18px;
        column-gap: 18px;
        margin-bottom: 0;
    }

        .details-dl dt {
            font-weight: 600;
            color: #333;
            text-align: left;
        }

        .details-dl dd {
            margin-bottom: 0;
            color: #222;
            word-break: break-word;
        }

    .details-actions {
        margin-top: 32px;
        display: flex;
        gap: 18px;
    }

    .details-link {
        color: #ff9800;
        font-weight: 600;
        text-decoration: none;
        transition: color 0.2s;
    }

        .details-link:hover {
            color: #ff5722;
            text-decoration: underline;
        }
</style>

<div class="details-card">
    <div class="details-title">
        @Model.AccountName
    </div>
    <dl class="details-dl">
        <dt>Email</dt>
        <dd>
            <a href="mailto:@Model.AccountEmail" style="color:#1976d2;">@Model.AccountEmail</a>
        </dd>
        <dt>Role</dt>
        <dd>@Model.AccountRole</dd>
    </dl>
    <div class="details-actions">
        <a asp-action="Index" class="details-link">&larr; Back to List</a>
    </div>
</div>
