@model NewsArticleDetailViewModel

<style>
    .article-container {
        max-width: 800px;
        margin: 40px auto;
        padding: 30px;
        background-color: #ffffff;
        box-shadow: 0 0 12px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        line-height: 1.7;
    }

    .article-title {
        font-size: 2rem;
        font-weight: bold;
        margin-bottom: 10px;
        color: #333;
    }

    .article-meta {
        font-size: 0.9rem;
        color: #777;
        margin-bottom: 15px;
    }

    .article-tags {
        font-size: 0.9rem;
        color: #666;
        margin-bottom: 20px;
    }

    .article-content {
        font-size: 1.1rem;
        color: #222;
    }

    .article-divider {
        margin: 20px 0;
        border-top: 1px solid #ccc;
    }
</style>

<div class="article-container">
    <div class="article-title">@Model.NewsTitle</div>

    <div class="article-meta">
        <p><strong>Headline:</strong> @Model.Headline</p>
        <p><strong>Category:</strong> @Model.CategoryName</p>
        <p><strong>Status:</strong> @(Model.NewsStatus == true ? "Active" : "Inactive")</p>
        <p><strong>Created on:</strong> @Model.CreatedDate?.ToString("yyyy-MM-dd")</p>
        <p><strong>Author:</strong> @Model.CreatedName</p>
        <p><strong>Last Edited By:</strong> @Model.UpdatedName</p>
        <p><strong>Modified Date:</strong> @Model.ModifiedDate?.ToString("yyyy-MM-dd")</p>
        <p><strong>Source:</strong> @Model.NewsSource</p>
    </div>

    <div class="article-tags">
        <strong>Tags:</strong> @string.Join(", ", Model.TagNames)
    </div>

    <div class="article-divider"></div>

    <div class="article-content">
        @Html.Raw(Model.NewsContent)
    </div>
</div>
