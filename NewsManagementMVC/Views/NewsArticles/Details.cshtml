@model FUNewsManagementSystem.BusinessObject.NewsArticle

@{
    ViewData["Title"] = "Details";
}

<style>
    .details-container {
        max-width: 700px;
        margin: 40px auto;
        background: #fff;
        border-radius: 18px;
        box-shadow: 0 8px 32px 0 rgba(60,60,60,0.12), 0 1.5px 6px 0 rgba(60,60,60,0.08);
        padding: 36px 40px 28px 40px;
    }

    .details-title {
        font-size: 2.5rem;
        font-weight: 700;
        color: #333;
        margin-bottom: 0.5rem;
        text-align: center;
    }

    .details-subtitle {
        font-size: 1.3rem;
        color: #ffa726;
        font-weight: 500;
        text-align: center;
        margin-bottom: 2rem;
    }

    .details-list dt {
        font-weight: 600;
        color: #444;
        width: 160px;
        float: left;
        clear: left;
        margin-bottom: 10px;
    }

    .details-list dd {
        margin-left: 180px;
        margin-bottom: 10px;
        color: #222;
        word-break: break-word;
    }

    .details-list {
        margin-bottom: 1.5rem;
    }

    .back-link {
        display: inline-block;
        margin-top: 18px;
        color: #ff9800;
        font-weight: 600;
        text-decoration: none;
        transition: color 0.2s;
    }

        .back-link:hover {
            color: #ff5722;
            text-decoration: underline;
        }
</style>

<div class="details-container">
    <div class="details-subtitle">@Model.NewsTitle</div>
    <dl class="details-list">
        <dt>Headline</dt>
        <dd>@Model.Headline</dd>
        <dt>Created Date</dt>
        <dd>
            @(Model.CreatedDate.HasValue ? Model.CreatedDate.Value.ToString("g") : "N/A")
        </dd>
        <dt>Content</dt>
        <dd>@Model.NewsContent</dd>
        <dt>Source</dt>
        <dd>@(string.IsNullOrEmpty(Model.NewsSource) ? "N/A" : Model.NewsSource)</dd>
        <dt>Status</dt>
        <dd>@(Model.NewsStatus == true ? "Active" : Model.NewsStatus == false ? "Inactive" : "N/A")</dd>
        <dt>Category</dt>
        <dd>@(Model.Category != null ? Model.Category.CategoryName : "N/A")</dd>
        <dt>Created By</dt>
        <dd>@(Model.CreatedBy != null ? Model.CreatedBy.AccountName : "N/A")</dd>

    </dl>
    <a href="#" onclick="if(document.referrer){window.history.back();}else{window.location='@Url.Action("Index")';} return false;" class="back-link">← Back</a>
</div>
