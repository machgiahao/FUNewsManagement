<link href="/css/report.css" rel="stylesheet"/>
<form method="get">
    <div class="report-filter-bar">
        <label for="startDate">Start Date:</label>
        <input type="date" id="startDate" name="startDate" value="@ViewBag.StartDate" class="form-control" />
        <label for="endDate" style="margin-left:12px;">End Date:</label>
        <input type="date" id="endDate" name="endDate" value="@ViewBag.EndDate" class="form-control" />
        <button type="submit" class="btn btn-primary ms-3">
            <i class="bi bi-file-earmark-bar-graph"></i> Generate Report
        </button>
    </div>
</form>
@if (Model != null && Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Created Date</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.NewsTitle</td>
                <td>@item.CreatedDate?.ToString("yyyy-MM-dd")</td>
                <td>
                    @if (item.NewsStatus == true)
                    {
                        <span class="text-success">Active</span>
                    }
                    else
                    {
                        <span class="text-danger">Inactive</span>
                    }
                </td>

            </tr>
        }
        </tbody>
    </table>
}
else
{
    <p>No data found for the selected period.</p>
}
