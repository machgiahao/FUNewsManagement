@model FUNewsManagementSystem.BusinessObject.Category

@{
    ViewData["Title"] = "Category Details";
}

<style>
    .details-card {
        background: #fff;
        border-radius: 24px;
        box-shadow: 0 8px 32px 0 rgba(60,60,60,0.10), 0 1.5px 6px 0 rgba(60,60,60,0.08);
        max-width: 700px;
        margin: 48px auto 32px auto;
        padding: 40px 36px 32px 36px;
    }

    .details-title {
        color: #ff9800;
        font-size: 1.6rem;
        font-weight: 700;
        text-align: center;
        margin-bottom: 32px;
    }

    .details-dl {
        display: grid;
        grid-template-columns: 160px 1fr;
        row-gap: 18px;
        column-gap: 18px;
        margin-bottom: 0;
    }

        .details-dl dt {
            font-weight: 600;
            color: #333;
            text-align: left;
        }

        .details-dl dd {
            margin-bottom: 0;
            color: #222;
            word-break: break-word;
        }

    .details-badge {
        font-size: 1em;
        padding: 0.3em 1em;
        border-radius: 12px;
        font-weight: 600;
        background: #e8f5e9;
        color: #388e3c;
        display: inline-block;
    }

        .details-badge.inactive {
            background: #ffebee;
            color: #d32f2f;
        }

    .details-back {
        color: #ff9800;
        font-weight: 600;
        text-decoration: none;
        margin-top: 32px;
        display: inline-block;
        transition: color 0.2s;
    }

        .details-back:hover {
            color: #ff5722;
            text-decoration: underline;
        }
</style>

<div class="details-card">
    <div class="details-title">
        @Model.CategoryName
    </div>
    <dl class="details-dl">
        <dt>Description</dt>
        <dd>@Model.CategoryDesciption</dd>

        <dt>Status</dt>
        <dd>
            @if (Model.IsActive == true)
            {
                <span class="details-badge">Active</span>
            }
            else
            {
                <span class="details-badge inactive">Inactive</span>
            }
        </dd>

        <dt>Parent Category</dt>
        <dd>@Model.ParentCategory?.CategoryName</dd>
    </dl>
    <a asp-action="Index" class="details-back">&larr; Back to List</a>
</div>
